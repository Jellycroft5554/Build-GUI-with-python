from tkinter import *
import random

# --- Globals ---
my_window = Tk()
C_Score = 0
P_Score = 0
Computer_List = ["Rock", "Paper", "Scissors"]

# --- Selection functions ---
def Selection_Rock():
    Player_Select = "Rock"
    Computer_Select = random.choice(Computer_List)
    winner_decider(Player_Select, Computer_Select)

def Selection_Paper():
    Player_Select = "Paper"
    Computer_Select = random.choice(Computer_List)
    winner_decider(Player_Select, Computer_Select)

def Selection_Scissors():
    Player_Select = "Scissors"
    Computer_Select = random.choice(Computer_List)
    winner_decider(Player_Select, Computer_Select)

# --- Winner logic ---
def winner_decider(Player_Select, Computer_Select):
    global P_Score, C_Score

    # show selections
    player_selected.config(text="You Selected: " + Player_Select)
    Computer_selected.config(text="Computer Selected: " + Computer_Select)

    # determine result
    if Player_Select == Computer_Select:
        # tie: no score change
        pass
    elif (Player_Select == "Rock" and Computer_Select == "Scissors") or \
         (Player_Select == "Paper" and Computer_Select == "Rock") or \
         (Player_Select == "Scissors" and Computer_Select == "Paper"):
        P_Score += 1
    else:
        C_Score += 1

    # update score labels
    Player_Score.config(text="Player Score: " + str(P_Score))
    Computer_Score.config(text="Computer Score: " + str(C_Score))

# --- UI Setup ---
my_window.title("Rock Paper Scissors!")
my_window.geometry("480x320")
# Use explicit font tuples to avoid TypeError on some systems
header_font = ("Helvetica", 16, "bold")
label_font = ("Helvetica", 11)

Title = Label(my_window, text="Rock Paper Scissors!", font=header_font, fg="grey")
Title.grid(row=0, column=1, pady=(10,5))

Welcome = Label(my_window, text="Welcome", font=label_font, fg="green")
Welcome.grid(row=1, column=1)

Options = Label(my_window, text="Your Options:", font=label_font)
Options.grid(row=2, column=0, pady=10, padx=10)

Rock = Button(my_window, text="Rock", width=10, command=Selection_Rock)
Rock.grid(row=3, column=0, pady=8)

Paper = Button(my_window, text="Paper", width=10, command=Selection_Paper)
Paper.grid(row=3, column=1, padx=6)

Scissors = Button(my_window, text="Scissors", width=10, command=Selection_Scissors)
Scissors.grid(row=3, column=2, padx=6)

Score = Label(my_window, text="Score:", font=label_font)
Score.grid(row=4, column=0, pady=(10,0))

player_selected = Label(my_window, text="You Selected:", font=label_font)
player_selected.grid(row=5, column=1, pady=8)

Player_Score = Label(my_window, text="Player Score: 0", font=label_font)
Player_Score.grid(row=5, column=2, pady=8)

Computer_selected = Label(my_window, text="Computer Selected:", font=label_font)
Computer_selected.grid(row=6, column=1)

Computer_Score = Label(my_window, text="Computer Score: 0", font=label_font)
Computer_Score.grid(row=6, column=2)

my_window.mainloop()
